            <dependency>
                <groupId>org.repeid</groupId>
                <artifactId>repeid-manager-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.repeid</groupId>
                <artifactId>repeid-manager-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
